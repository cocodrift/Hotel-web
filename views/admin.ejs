<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Product List</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Admin - Product List</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Image</th>
        <th>Actions</th> <!-- New column for actions -->
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.category %></td>
          <td><img src="<%= item.imageUrl %>" alt="<%= item.name %>"></td>
          <td>
            <a href="/editProduct/<%= item._id %>">Edit</a> <!-- Edit button -->
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
