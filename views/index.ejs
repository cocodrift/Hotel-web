<!DOCTYPE html>
<html lang="en, kiswahili">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/pp.jpg" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merienda:wght@300..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <title>MiniEats Ke</title>
</head>

<body>
    <header>
        <h1>Welcome to Our Canteen</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/canteen">Canteen</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <h2>Main Dishes</h2>
            <ul>
                <% mainDishes.forEach(dish => { %>
                    <li>
                        <h3><%= dish.name %></h3>
                        <p>Price: $<%= dish.price %></p>
                        <p>Category: <%= dish.category %></p>
                        <img src="<%= dish.imageUrl %>" alt="<%= dish.name %>">
                    </li>
                <% }) %>
            </ul>
        </section>
        <section>
            <h2>Fast Foods</h2>
            <ul>
                <% fastFoods.forEach(food => { %>
                    <li>
                        <h3><%= food.name %></h3>
                        <p>Price: $<%= food.price %></p>
                        <p>Category: <%= food.category %></p>
                        <img src="<%= food.imageUrl %>" alt="<%= food.name %>">
                    </li>
                <% }) %>
            </ul>
        </section>
        <section>
            <h2>Drinks</h2>
            <ul>
                <% drinks.forEach(drink => { %>
                    <li>
                        <h3><%= drink.name %></h3>
                        <p>Price: $<%= drink.price %></p>
                        <p>Category: <%= drink.category %></p>
                        <img src="<%= drink.imageUrl %>" alt="<%= drink.name %>">
                    </li>
                <% }) %>
            </ul>
        </section>
    </main>
    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Our Canteen</p>
    </footer>
</body>
</html>
